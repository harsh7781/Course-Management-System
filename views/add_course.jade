extends layout

block content
    nav.navbar.navbar-inverse( role="navigation" )(style='background-color:white;')
        .navbar-header
            button.navbar-toggle.collapsed( type="button", data-toggle="collapse", data-target="#navbar-inverse", aria-expanded="false", aria-controls="navbar",background-color= '#333')
                span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
            a.navbar-brand(href="/addcourse",active='true')(style='color:black;font-size:20px;font-weight:bold;') Home
            a.navbar-brand(href="/student_login")(style='color:black;font-size:20px;font-weight:bold;') Sign Out
    h1
    p
        .main.container
            .row
                .col-md-6.col-md-offset-3
                h1.display-4.m-b-2(style="font-weight:bold;font-family:Times New Roman;color:red") Courses
                form(method = "POST" , action="/addcourse",name="course")
                    div(style="margin-bottom:50px;").col-sm-6.col-sm-offset-1
                        div.form-group
                            label(for='cname') Course Name:
                            input#cname.form-control(type='text', placeholder = 'Course Name', name ='cname',required='true')
                        div.form-group
                            label(for='duration') Duration:
                            input#duration.form-control(type='text', placeholder = 'Duration', name ='duration',required='true')
                        div.form-group
                            label(for='start') Start Date:
                            input#start.form-control(type='text', placeholder = 'Start', name ='start',required='true')
                        div.form-group
                            label(for='Lecturer') Lecturer:
                            input#Lecturer.form-control(type='text', placeholder = 'Lecturer', name ='Lecturer',required='true')
                        div.form-group
                            label(for='seats') Seats Available:
                            input#seats.form-control(type='number', placeholder = 'No of Seats Available', name ='seats',required='true')
                        div.form-group
                        button.btn.btn-primary(type ='submit') Add Course

                    div.footer